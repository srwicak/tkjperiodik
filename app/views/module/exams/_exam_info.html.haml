.mb-8 
  %p.mb-6.font-semibold.text-xl Informasi Ujian 
  %table( class="w-full text-left border border-separate rounded border-slate-200" cellspacing="0" )
    %tbody
      %tr( class="transition-colors duration-300 hover:bg-slate-50" )
        %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500 md:w-[200px] w-[100px]" ) Nama Ujian
        %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" )
          .my-2
            %span.text-red-500.font-semibold= @exam.name
      
      - if @available_schedules.present?
        - earliest_schedule = @available_schedules.min_by(&:exam_date)
        - latest_schedule = @available_schedules.max_by { |s| s.exam_date_end || s.exam_date }
        - latest_date = latest_schedule.exam_date_end || latest_schedule.exam_date
        
        %tr( class="transition-colors duration-300 hover:bg-slate-50" )
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" ) Jadwal Tersedia
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" )
            .my-2 
              %span.text-red-500.font-semibold= I18n.l(earliest_schedule.exam_date, format: :date_only)
              sampai
              %span.text-red-500.font-semibold= I18n.l(latest_date, format: :date_only)
        
        %tr( class="transition-colors duration-300 hover:bg-slate-50" )
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" ) Total Peserta Terdaftar
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" ) 
            %span.text-red-500.font-bold #{@exam.registered_count}
            Personel
        
        %tr( class="transition-colors duration-300 hover:bg-slate-50" )
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" ) Jumlah Jadwal
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" ) 
            %span.text-primary.font-bold #{@available_schedules.count}
            jadwal tersedia
      - else
        %tr( class="transition-colors duration-300 hover:bg-slate-50" )
          %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500 text-center" colspan="2" ) 
            .text-gray-500.italic Belum ada jadwal ujian yang tersedia
      
      %tr( class="transition-colors duration-300 hover:bg-slate-50" )
        %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500 text-center" colspan="2" ) Informasi Lanjut Ujian
      %tr( class="transition-colors duration-300 hover:bg-slate-50" )
        %td( class="h-12 px-6 text-sm transition duration-300 border-t border-l first:border-l-0 border-slate-200 stroke-slate-500 text-slate-500" colspan="2" )
          - if !@exam.descriptions.empty?
            .whitespace-pre-line.mb-4
              #{@exam.descriptions}
          - else
            .divider.italic.uppercase.text-sm.text-gray-500.font-bold tidak ada informasi lanjutan
            
      