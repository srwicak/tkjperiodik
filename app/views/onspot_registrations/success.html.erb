<% content_for :title do %>
  Pendaftaran Berhasil
<% end %>

<div class="min-h-screen bg-gradient-to-br from-green-50 via-white to-emerald-50 relative overflow-hidden">
  <!-- Decorative background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-green-400 rounded-full opacity-10 blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-emerald-400 rounded-full opacity-10 blur-3xl"></div>
  </div>

  <div class="w-full mx-auto max-w-[540px] flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8 relative">
    <div class="max-w-[540px] mx-auto w-full">
      <!-- Success Icon -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-green-500 to-emerald-600 rounded-full shadow-lg mb-6 animate-bounce">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Pendaftaran Berhasil!</h1>
        <p class="text-base text-gray-600">Akun Anda telah terdaftar dan siap mengikuti ujian</p>
      </div>

      <!-- Success Card -->
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 sm:p-8 space-y-6">
        <!-- Exam Info -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-5">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div class="ml-4 flex-1">
              <h3 class="text-sm font-medium text-blue-900 uppercase tracking-wide">Ujian</h3>
              <p class="mt-1 text-lg font-bold text-blue-900"><%= @exam.name %></p>
              <p class="mt-1 text-sm text-blue-700">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <%= I18n.l(@exam_schedule.exam_date, format: :long) %>
              </p>
            </div>
          </div>
        </div>

        <!-- Account Info -->
        <div class="space-y-4">
          <h3 class="text-lg font-bold text-gray-900 flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Informasi Akun Anda
          </h3>

          <div class="bg-gray-50 rounded-xl p-5 space-y-4">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">
                  <%= @user.is_police? ? 'NRP' : 'NIP' %>
                </p>
                <p class="mt-1 text-base font-bold text-gray-900"><%= @user.identity %></p>
              </div>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Nama Lengkap</p>
              <p class="mt-1 text-base font-semibold text-gray-900"><%= @user_detail.name %></p>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Pangkat</p>
              <p class="mt-1 text-base font-semibold text-gray-900"><%= @user_detail.rank %></p>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Jabatan</p>
              <p class="mt-1 text-base font-semibold text-gray-900"><%= @user_detail.position %></p>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Kesatuan</p>
              <p class="mt-1 text-base font-semibold text-gray-900"><%= @user_detail.unit %></p>
            </div>

            <% if @registration.golongan.present? %>
              <div class="border-t border-gray-200 pt-4">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Golongan Usia</p>
                <p class="mt-1 text-base font-semibold text-gray-900">
                  <%= case @registration.golongan
                      when 1 then "Golongan 1 (18-30 tahun)"
                      when 2 then "Golongan 2 (31-40 tahun)"
                      when 3 then "Golongan 3 (41-50 tahun)"
                      when 4 then "Golongan 4 (51+ tahun)"
                      else "Golongan #{@registration.golongan}"
                      end %>
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Important Notes -->
        <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-lg p-5">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-yellow-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <div class="ml-3">
              <h4 class="text-sm font-bold text-yellow-900">Penting!</h4>
              <ul class="mt-2 text-sm text-yellow-800 space-y-1 list-disc list-inside">
                <li>Simpan NRP/NIP dan kata sandi Anda</li>
                <li>Unduh berkas pendaftaran dengan klik tombol di bawah</li>
                <li>Bawa berkas pendaftaran saat ujian</li>
                <li>Datang minimal 30 menit sebelum ujian dimulai</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="space-y-3 pt-4">
          <%= link_to download_onspot_registration_path(exam_slug: @exam.slug, registration_slug: @registration.slug), 
            class: 'block w-full rounded-xl bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4 text-center text-base font-semibold text-white hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-lg hover:shadow-xl' do %>
            <svg class="w-5 h-5 inline mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Unduh Berkas Pendaftaran (PDF)
          <% end %>

          <%= link_to new_user_session_path, 
            class: 'block w-full rounded-xl bg-gray-100 px-6 py-4 text-center text-base font-semibold text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all duration-200' do %>
            <svg class="w-5 h-5 inline mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
            Masuk ke Dashboard
          <% end %>
        </div>
      </div>

      <!-- Footer Note -->
      <div class="mt-8 text-center">
        <p class="text-sm text-gray-500">
          Jika mengalami kesulitan, silakan hubungi panitia ujian
        </p>
      </div>
    </div>
  </div>
</div>
