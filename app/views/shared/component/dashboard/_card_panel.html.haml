%div{ class: "bg-gradient-to-br from-white to-gray-50 rounded-xl border border-gray-200 p-4 md:p-6 shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1" }
  .flex.flex-col.gap-4
    .flex.items-start.justify-between
      .flex.items-center.gap-3
        .bg-gradient-to-br.from-red-500.to-red-600.p-2.md:p-3.rounded-xl.shadow-md
          %i.ri-user-line.text-white.text-xl.md:text-2xl
        .flex.flex-col
          .text-2xl.md:text-3xl.font-black.text-gray-800= number
          .text-xs.md:text-sm.font-medium.text-gray-500.mt-1= subject
    %a{ href: link, class: "text-red-600 font-semibold text-xs md:text-sm hover:text-red-700 flex items-center gap-2 group" } 
      %span.uppercase Lihat Detail
      %i.ri-arrow-right-line.group-hover:translate-x-1.transition-transform
